[Unit]
Description=Snapcast client
Wants=avahi-daemon.service
After=network-online.target time-sync.target sound.target avahi-daemon.service

[Service]
# Create a user in the audio group
DynamicUser=yes
User=snapclient
SupplementaryGroups=audio

# Store state in /var/lib/snapclient
StateDirectory=snapclient
Environment=HOME=/var/lib/snapclient
BindPaths=/var/lib

ExecStart=/bin/snapclient --logsink=system $SNAPCLIENT_OPTS
Restart=on-failure

[Install]
WantedBy=multi-user.target
